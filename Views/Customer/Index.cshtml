@model IEnumerable<blackBox.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="button" class="btn btn-primary" value="New Customer" style="margin-top: 1vw; margin-bottom: 1vw;" onclick="location.href='@Url.Action("CustomerForm","Customer")'">

<h2>Customer List</h2>
@if (!Model.Any())
{
    <p>There is currently no customer base, we need Brand awareness!</p>
}

else
{
    <table id="customers" class="table table-bordered table-hover">
        <tr style="background-color:antiquewhite">
            <th>Customer</th>
            <th>Discount Rate</th>
            <th>Delete</th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name, "EditForm", "Customer", new { id = customer.Id }, null)</td>
                <td>@customer.MembershipType.TitleMembershipType</td>
                <td>
                    <button data-customer-id="@customer.Id" class="btn-link js-delete">Delete</button>
                </td>
            </tr>
        }
    </table>
}

@section scripts 
    {
    <script>
        $(document).ready(function () {
            $("#customers").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: "",
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, customer) {
                            return "<a href='/customers/edit/" + customer.id + "'>" + customer.name + "</a>";
                        }
                    },
                    {
                        //data: "name"  WILL BE REPLACED WITH Membershipid (require membershipDto model for API)
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' customer-data-id=" + data + ">Delete</button>";
                        }
                    }
                ]


            });


            $("#customers").on("click",".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Do you want to delete this customer?", function () {
                    if (result) {
                        $.ajax(
                            {
                                url: "/api/customers/" + button.attr("data-customer-id"),
                                method: "DELETE",
                                success: function () {
                                    console.log(button.attr("data-customer-id") + "successfully deleted");
                                    button.parent("tr").remove();
                                }
                            }
                        )
                    }
                });
            });
        });
    </script>
    }