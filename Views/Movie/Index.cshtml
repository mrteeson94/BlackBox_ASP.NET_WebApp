@model IEnumerable<blackBox.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies List</h2>

<input type="button" class="btn btn-primary" value="Add Movie" style="margin-top: 1vw; margin-bottom: 1vw;" onclick ="location.href='@Url.Action("MovieForm","Movie")'">

@if (!Model.Any())
    {
        <p>There is currently no movies in our inventory!</p>
    }

else
            {
                <table class="table table-bordered table-hover">
                    <tr style="background-color:antiquewhite">
                        <th>Movie</th>
                        <th>Genre</th>
                    </tr>
                        @foreach(var movie in Model)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(movie.Name, "EditForm", "Movie", new { id = movie.Id }, null)
                                </td>
                                <td>
                                    @movie.Genre.GenreTitle
                                </td>
                            </tr>
                        }
                </table>
            }
