@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">Welcome to BlackBox!</h1>
        <p class="lead">This project is built via the ASP.NET MVC5 framework! The web application offers users to borrow movies that are available, while 
        admins are able to perform CRUD operations on UI elements that is connected to the database.</p>
        <p><a href="https://github.com/mrteeson94" class="btn btn-primary btn-md">My Github</a></p>
    </section>

    <div class="techStackList">
        <div class="frontEndList">
            <table class="table table-bordered table-hover">
                <tr>
                    <th colspan="3" style="text-align:center">Front-End Stack of the project</th>
                </tr>
                <tr>
                    <td>Razor(HTML + C#)</td>
                    <td>Javascript (Jquery)</td>
                    <td>CSS3 (Bootstrap)</td>
                </tr>
            </table>
        </div>

        <div class="backEndList">
            <table class="table table-bordered table-hover">
                <tr>
                    <th colspan="3" style="text-align:center">Back-End Stack of the project</th>
                </tr>
                <tr>
                    <td>ASP.NET MVC</td>
                    <td>Entity Framework</td>
                    <td>.NET framework</td>
                </tr>
            </table>
        </div>

    </div>
</main>